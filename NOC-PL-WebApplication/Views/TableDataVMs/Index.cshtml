@model NOCPLWebApplication.Models.TableDataVM
@*@model IEnumerable<NOCPLWebApplication.Models.Server>*@
@{
    ViewBag.Title = "NOC Table Page";
    List<SelectListItem> statusSelectList = new List<SelectListItem>();
    statusSelectList.Add(new SelectListItem() { Text = "Primary", Value = "Primary" });
    statusSelectList.Add(new SelectListItem() { Text = "Secondary", Value = "Secondary" });
}
@section scripts{
    <link href="~/css/serverModal.styles.css" rel="stylesheet" />
    <script src="~/js/serverModal.Controller.js"></script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 1</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Primary</th>
                            <th>Secondary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TableProducts.Where(product => product.TableNumber == 1)) {
                            <tr>
                                <td id="@item.Id" class="label-warning fa fa-server">@item.ProductName</td>
                                <td class="label-info" productName="@item.ProductName" serverColumn="primaryColumn" 
                                    serverGroup="@(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerGroup : "Empty")">
                                        @(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                                <td class="label-primary" productName="@item.ProductName" serverColumn="secondaryColumn" 
                                    serverGroup="@(item.SecondaryProductServer != null ? item.SecondaryProductServer.ServerGroup : "Empty")">
                                        @(item.SecondaryProductServer != null ? @item.SecondaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-5">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 2</th>
