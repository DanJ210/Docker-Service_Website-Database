<div class="modal fade" id="serverModal" role="dialog" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">Server Select</h4>
                <button id="windowClose" class="fa fa-window-close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <ul>
                    <li id="modalTd">@Html.DropDownList("ServerSelectList", ViewBag.serverList as SelectList, "Select Server", new {onchange = "serverListChange()" })</li>
                    @*<li>@Html.DropDownList("StatusSelectList", statusSelectList, "Select Status", new { onchange = "statusListChange()" })</li>*@
                </ul>
            </div>
            <div class="modal-footer">
                <button id="saveButton" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>