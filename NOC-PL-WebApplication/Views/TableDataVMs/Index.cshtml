                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-5">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 3</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Server</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TableProducts.Where(product => product.TableNumber == 3)) {
                            <tr>
                                <td id="@item.Id" class="label-default">@item.ProductName</td>
