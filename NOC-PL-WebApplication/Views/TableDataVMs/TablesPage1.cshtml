@model NOCPLWebApplication.Models.TableDataVM
@*@model IEnumerable<NOCPLWebApplication.Models.Server>*@
@{
    ViewBag.Title = "NOC Table Page 1";
}
@section scripts{
    <link href="~/css/serverModal.styles.css" rel="stylesheet" />
    <script src="~/js/serverModal.Controller.js"></script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 1</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Primary</th>
                            <th>Secondary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TableProducts.Where(product => product.TableNumber == 1)) {
                            <tr>
                                <td id="@item.Id" class="productSelected">@item.ProductName</td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="primaryColumn" 
                                    serverGroup="@(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerGroup : "Empty")">
                                    <i class="fa fa-server"></i>
                                        @(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="secondaryColumn" 
                                    serverGroup="@(item.SecondaryProductServer != null ? item.SecondaryProductServer.ServerGroup : "Empty")">
                                    <i class="fa fa-server"></i>  
                                        @(item.SecondaryProductServer != null ? @item.SecondaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-4">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 2</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Primary</th>
                            <th>Secondary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TableProducts.Where(product => product.TableNumber == 2)) {
                            <tr>
                                <td class="">@item.ProductName</td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="primaryColumn"
                                    serverGroup="@(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerGroup : "Empty")">
                                    @(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="secondaryColumn"
                                    serverGroup="@(item.SecondaryProductServer != null ? item.SecondaryProductServer.ServerGroup : "Empty")">
                                    @(item.SecondaryProductServer != null ? @item.SecondaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-4">
            <div class="table">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Table 3</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Server</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TableProducts.Where(product => product.TableNumber == 3)) {
                            <tr>
                                <td class="">@item.ProductName</td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="primaryColumn"
                                    serverGroup="@(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerGroup : "Empty")">
                                    @(item.PrimaryProductServer != null ? item.PrimaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                                <td class="" productId="@item.Id" productName="@item.ProductName" serverColumn="secondaryColumn"
                                    serverGroup="@(item.SecondaryProductServer != null ? item.SecondaryProductServer.ServerGroup : "Empty")">
                                    @(item.SecondaryProductServer != null ? @item.SecondaryProductServer.ServerName : "Not Set") @*Shown in the cell*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>


<div>
    @await Component.InvokeAsync("ModalWindow")
</div>
