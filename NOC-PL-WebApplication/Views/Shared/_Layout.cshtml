<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/angular2/angular.min.js"></script>
    <script src="~/lib/angular2/angular.min.js"></script>


</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">NOC Site</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="Table" asp-action="Index">Tables</a></li>
                <li><a href="#">Test</a></li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>


    <div class="modal fade" id="serverModal" role="menu">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="modalTitle" class="modal-title">Server Select</h4>
                    <button id="windowClose" class="fa fa-window-close" data-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <ul>
                        <li>Test</li>
                        <li>Testing</li>
                        <li>Testy</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal">Close</button>
                    <h4>End Servers</h4>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angular2/angular.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false)
</body>
</html>