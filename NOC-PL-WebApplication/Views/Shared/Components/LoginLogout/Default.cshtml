@if(User.Identity.IsAuthenticated) {
    <span>Hello, @User.Identity.Name</span>
    <form method="post" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
        <input type="submit" value="Logout" />
    </form>
}
else {
    <a asp-controller="Account" asp-action="Login"><i class="glyphicon glyphicon-log-in"></i>Login</a>
}